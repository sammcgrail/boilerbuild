{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2015"],
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "downlevelIteration": true,
    "typeRoots" : ["./node_modules/@types"],
  },
  "include": [
    "src/"
  ],
  "exclude": ["node_modules"]
}

